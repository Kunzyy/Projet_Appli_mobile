<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="vertical"
    android:useDefaultMargins="true">

    <Button
        android:id="@+id/bluetoothActivity"
        android:text="Nouvelle lampe"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:id="@+id/btText"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="1"
        />

    <TextView
        android:id="@+id/textConnexion"
        android:layout_column="2"
        android:layout_row="1"
        android:text="Tentative de connexion..."
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_row="2"
        android:src = "@drawable/bluetooth"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/lamp1"
        android:layout_column="1"
        android:layout_row="2"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/lamp2"
        android:layout_column="1"
        android:layout_row="3"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/lampActivity"
        android:text="Gérer la lampe"
        android:layout_column="2"
        android:layout_rowSpan="2"
        android:layout_row="2"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/textList1"
        android:text="Historique"
        android:layout_marginTop="20dp"
        android:layout_columnSpan="4"
        android:layout_column="0"
        android:layout_row="5"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/textList2"
        android:text="Cliquez sur une lampe pour vous connecter à celle-ci :"
        android:layout_marginTop="5dp"
        android:layout_columnSpan="4"
        android:layout_column="0"
        android:layout_row="6"
        android:visibility="invisible"
        />


    <ListView
        android:layout_marginTop="10dp"
        android:layout_columnSpan="4"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lampList"
        android:visibility="invisible"/>


</GridLayout>